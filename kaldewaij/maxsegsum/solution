inv   : r = mss.n ∧ 0 ≤ n ∧ n ≤ N
guard : n ≠ N

⟦ con N : int { N ≥ 0 }
; con a : array [0..N) of int
; var r : int
  ⟦ var n : int

  ; r,n:= 0,0

    { inv.n }

  ; do n ≠ N →

      { inv.n ∧ n ≠ N }

      r:= r ↑ ((f.n + a.n) ↑ 0)

      { inv.(n+1) }

    ; n:= n+1

      { inv.n }
    od

    { inv ∧ n = N }
  ⟧
  { r = ↑(p,q : 0 ≤ p ≤ q ≤ N : Σ (i : p ≤ i < q : a.i)) }
⟧