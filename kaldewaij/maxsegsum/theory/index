§   MAXSEGSUM

+   N : ℕ

+   a : array [0..N) of ℤ

+   ss : [0,N] × [0,N] → ℤ

    ss = (p,q :: Σ(i : p ≤ i < q : a.i))

[0] ss.(n,n) = 0

[1] ss.(p,n+1) = ss.(p,n) + a.n

+   mss : [0,N] → ℤ

    (n :: ↑(p,q : 0 ≤ p ≤ q ≤ n : ss(p,q)))

[2] mss.0 = 0

[3] mss.(n+1) = ?

+   f : [0..N] → ℤ

    f = (n :: ↑(p : 0 ≤ p ≤ n : ss(p,n)))

[4] f.0 = 0

■   MAXSEGSUM