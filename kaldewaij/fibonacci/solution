fib.0 = 1
fib.1 = 1
fib.(n+2) = fib.(n+1) + fib.n

Pre   : N ≥ 0
Post  : x = fib.N
Q     : x = fib.N ∧ n = N ∧ 0 ≤ n ∧ n ≤ N
Inv   : x = fib.N ∧ 0 ≤ n ∧ n ≤ N
Guard : n ≠ N

⟦ con N : int { N ≥ 0 }
; var x : int
  ⟦ var n : int
  ; "establish Inv"
    { Inv }
  ; do n ≠ N →
      { n ≠ N ∧ Inv }
    ; "maintain Inv"
      { Inv }
    od
    { Inv ∧ n = N }
  ⟧
  { x = fib.N }
⟧