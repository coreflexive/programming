Pre   : N ≥ 0
Post  : r ≡ ∀(i : 0 ≤ i < N : f.i ≥ 0)
Q     : r ≡ ∀(i : 0 ≤ i < n : f.i ≥ 0) ∧ n = N ∧ 0 ≤ n ≤ N
Inv   : r ≡ ∀(i : 0 ≤ i < n : f.i ≥ 0) ∧ 0 ≤ n ≤ N
Guard : n ≠ N

⟦ con N : int { N ≥ 0 }
; con f : array [0..N) of int
; var r : bool
  ⟦ var n : int
  ; r,n:= true,0
    { Inv }
  ; do n ≠ N →
      { n ≠ N ∧ Inv }
      "maintain Inv"
      { Inv }
    od
    { r ≡ ∀(i : 0 ≤ i < n : f.i ≥ 0) ∧ n = N ∧ 0 ≤ n ≤ N }
  ⟧
  { r ≡ ∀(i : 0 ≤ i < N : f.i ≥ 0) }
⟧