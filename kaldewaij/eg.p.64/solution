inv     : r = f.n ∧ 0 ≤ n ∧ n ≤ N
guard   : n ≠ N
variant : N - n

⟦ con N : int { N ≥ 0 }
; a : array [0..N) of int
; var r : int
  ⟦ var n : int
  ; r,n: 0,0
    { inv }
  ; do n ≠ N →
      { inv ∧ n ≠ N }
    ; "establish inv(n+1)
      { inv(n+1) }
    ; n:= n+1
      { inv }
    od
    { r = f.n ∧ n = N ∧ 0 ≤ n ∧ n ≤ N }
  ⟧
  { r = f.N }
⟧