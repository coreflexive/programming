Inv     : r = f.n ∧ 0 ≤ n ∧ n ≤ N
Guard   : n ≠ N
Variant : N - n

⟦ con N : int { N ≥ 0 }
; a : array [0..N) of int
; var r : int
  ⟦ var n : int
  ; r,n: 0,0
    { Inv }
  ; do n ≠ N →
      { Inv ∧ n ≠ N }
    ; "establish Inv(n+1)
      { Inv(n+1) }
    ; n:= n+1
      { Inv }
    od
    { r = f.n ∧ n = N ∧ 0 ≤ n ∧ n ≤ N }
  ⟧
  { r = f.N }
⟧