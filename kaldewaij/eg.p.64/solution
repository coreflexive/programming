⟦ con N : int { N ≥ 0 }
; a : array [0..N) of int
; var r : int
  ⟦ var s,n : int
  ; r,s,n:= 0,0,0
    { inv.0 }
  ; do n ≠ N →
      { inv.n ∧ n ≠ N }
    ; if a.n < 0 → r,s:= r,s+1
       ▯ a.n = 0 → r,s:= r+s,s+1
       ▯ a.n > 0 → r,s:= r+s,s
      fi
      { inv(n+1) }
    ; n:= n+1
      { inv }
    od
    { r = f.n ∧ n = N ∧ 0 ≤ n ∧ n ≤ N }
  ⟧
  { r = f.N }
⟧